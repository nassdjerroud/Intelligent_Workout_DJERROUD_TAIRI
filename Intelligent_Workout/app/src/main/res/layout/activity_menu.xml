<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/font"
    tools:context="intelligent_workout.nassimanis.paris8.intelligent_workout.MenuActivity">

    <Button
        android:text="@string/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:onClick="onClick"
        android:id="@+id/buttonPlay" />

    <Button
        android:text="@string/btnRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonPlay"
        android:onClick="onClick"
        android:id="@+id/buttonRes"
        android:layout_alignLeft="@+id/buttonPlay" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"
        android:id="@+id/buttonInfo"
        android:background="@drawable/info"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:id="@+id/buttonParam"
        android:background="@drawable/roue"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonInfo"
        android:onClick="onClick"
        android:id="@+id/buttonExit"
        android:background="@drawable/btnexit"
        android:layout_alignLeft="@+id/buttonInfo" />

    <Button
        android:text="@string/btnHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="47dp"
        android:id="@+id/buttonScore"
        android:layout_below="@+id/buttonRes"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
